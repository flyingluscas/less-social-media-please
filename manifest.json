{
  "name": "Less Social Media Pls",
  "version": "0.1.0",
  "description": "Block social media during work hours.",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "css": ["src/block-twitter.css"]
    },
    {
      "matches": ["https://www.instagram.com/*"],
      "css": ["src/block-instagram.css"]
    }
  ]
}
